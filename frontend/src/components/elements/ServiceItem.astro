---
export interface Props {
  slug: string;
  title: string;
  description: string;
  image: string;
  icon?: string;
}

// También lo extraemos de Astro.props para poder usarlo en el template.
const { slug, title, description, image, icon } = Astro.props;
---

<a
  href={`/${slug}`}

  class="block rounded-3xl overflow-hidden bg-white shadow-md hover:shadow-xl transition-shadow duration-300 text-center"
>
  <div class="relative h-56 overflow-hidden">
    <img src={image} alt={title} class="w-full h-full object-cover" />
    {
      icon && (
        <div class="absolute top-4 right-4 bg-lime-300 text-white p-2 rounded-full shadow-md">
                    <img src={icon} alt="Icono" class="w-5 h-5" />       {" "}
        </div>
      )
    }
  </div>

  <div class="p-6">
    <h3 class="text-lg md:text-xl font-bold text-lime-700 mb-2">{title}</h3>
    <p class="text-sm text-neutral-600">{description}</p>
  </div>
</a>
